{
  "name": "fastify-knex-api",
  "version": "0.1.2",
  "description": "Fastify plugin to expose API for Knex Query Builder",
  "main": "src/index.js",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "scripts": {
    "buildcjs": "rollup ./dist/index.js --file ./dist/index.cjs --format cjs",
    "clean": "rimraf ./dist",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.?(c)js\" ",
    "lint:fix": "npm run lint -- --fix",
    "postpublishOnly": "rimraf ./src/index.cjs",
    "prepublishOnly": "npm run buildcjs && npm test",
    "test": "tap -j1 --allow-incomplete-coverage \"./test/*.test.?(c)js\"",
    "test:ci": "npm run test",
    "test:ts": "tsd",
    "tsc": "npm run clean; tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EmilianoBruni/fastify-knex-api.git"
  },
  "keywords": [
    "nodejs",
    "fastify",
    "knex",
    "knexjs",
    "crud",
    "api",
    "sql",
    "schema",
    "mysql",
    "postgresql",
    "sqlite3",
    "javascript"
  ],
  "author": "Emiliano Bruni <info@ebruni.it>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/EmilianoBruni/fastify-knex-api/issues"
  },
  "homepage": "https://github.com/EmilianoBruni/fastify-knex-api#readme",
  "devDependencies": {
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.0.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "mysql2": "^3.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.5",
    "tap": "^18.6.1",
    "tsd": "^0.30.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@fastify/error": "^3.4.1",
    "@types/node": "^20.11.5",
    "fastify": "^4.25.1",
    "fastify-plugin": "^4.5.1",
    "knex": "^3.1.0",
    "knex-schema-inspector": "^3.1.0"
  },
  "types": "./dist/index.d.ts"
}
