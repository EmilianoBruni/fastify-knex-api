{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "plugins": ["import", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "import/order": [
        "error",
        {
            "groups": ["type", "builtin", ["sibling", "parent"], "index", "object"],
            "newlines-between": "never",
            "alphabetize": {
                "order": "asc",
                "caseInsensitive": true
            }
        }]
    }
}
